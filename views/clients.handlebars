<div class="section">
    <div class="container">
        <h1 class="title is-1">Client Portal</h1>
        <h2 class="title is-2">Welcome <span class="member-name subtitle is-4"></span></h2>
        <p>As a valued client, we are here to help you.</p>

        <hr>

        <h3 class="title is-3">New Basket</h3>
        <p>Request a new basket using this form.</p>
        <br>
        <form class="baskets" id="basket-form">
            <div class="field">
                <label class="label">Number of Family</label>
                <div class="field-body">
                    <div class="field">
                        <div class="control is-expanded">
                            <input class="input form-numStep" id="size-input" type="number" placeholder="0" min="1">
                            <input type="submit" value="Request Basket" class="basket button" id='request-button'>
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" id="UserEmail" name="UserEmail" value="{{UserEmail}}">
        </form>
    </div>
    <hr>
    <div class="container">
      <h3 class="title is-3">Assistance History</h3>
      {{#unless assistance}}
      <p>No assistance has been received yet - you can use the form above to make your first basket.</p>
      {{/unless}}
    {{#if unconfirmedAssistance}}
      <h4 class="title is-4">Baskets Requested</h4>
      <table class="table is-striped">
          <thead>
            <tr>
                <th>ID</th>
                <th>Creation Date</th>
            </tr>
          </thead>
        {{#each unconfirmedAssistance}}
        <tr>
          <td>{{this.dataValues.id}}</td>
          <td>{{this.dataValues.createdAt}}</td>
        </tr>
        {{/each}}
      </table>
      {{/if}}

      {{#if confirmedAssistance}}
      <h4  class="title is-4">Baskets Received</h4>
      <table class="table is-striped">
          <thead>
            <tr>
                <th>ID</th>
                <th>Creation Date</th>
            </tr>
          </thead>
        {{#each confirmedAssistance}}
        <tr>
          <td>{{this.dataValues.id}}</td>
          <td>{{this.dataValues.createdAt}}</td>
        </tr>
        {{/each}}
      </table>
      {{/if}}
    </div>
</div>

<script type="text/javascript" src="/js/members.js"></script>
<script type="text/javascript" src="/js/clients.js"></script>